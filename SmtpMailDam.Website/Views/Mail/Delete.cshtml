
@{
    ViewData["Title"] = "MailDelete";
}

@model SmtpMailDam.Website.Models.MailViewModel

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Mail</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReceiveDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReceiveDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="@Model.MailId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Mailbox" asp-action="Details" asp-route-id="@Model.MailboxId" class="btn btn-secondary">Back to List</a>
    </form>
</div>